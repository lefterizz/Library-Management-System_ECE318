<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.ece318_librarymanagementsys.controller.core.FormController"
      spacing="12"
      alignment="TOP_LEFT">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- ────────────── FORM TITLE ────────────── -->
    <Label fx:id="formTitle"
           text="Add / Edit Entity"
           style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <Separator prefWidth="420"/>

    <!-- ────────────── COMMON NAME FIELD ────────────── -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Name / Title:"/>
        <TextField fx:id="nameField" promptText="Enter title or name" prefWidth="300"/>
    </HBox>

    <!-- ────────────── GENRE SECTION ────────────── -->
    <VBox fx:id="genreSection" spacing="10" alignment="CENTER_LEFT"
          visible="false" managed="false">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Number of Sub-Genres:"/>
            <TextField fx:id="numSubGenresField" prefWidth="100"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Amazon URL:"/>
            <TextField fx:id="urlField" prefWidth="300"/>
        </HBox>
    </VBox>

    <!-- ────────────── SUB-GENRE SECTION ────────────── -->
    <VBox fx:id="subGenreSection" spacing="10" alignment="CENTER_LEFT"
          visible="false" managed="false">
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Main Genre:"/>
            <ComboBox fx:id="mainGenreCombo" prefWidth="200"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Number of Books:"/>
            <TextField fx:id="numBooksField" prefWidth="100"/>
        </HBox>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Amazon URL:"/>
            <TextField fx:id="urlFieldSub" prefWidth="300"/>
        </HBox>
    </VBox>

    <!-- ────────────── BOOK SECTION ────────────── -->
    <VBox fx:id="bookSection" spacing="10" alignment="CENTER_LEFT"
          visible="false" managed="false">

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Author:"/>
            <TextField fx:id="authorField" prefWidth="200"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Genre:"/>
            <ComboBox fx:id="genreCombo" prefWidth="180"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Sub-Genre:"/>
            <ComboBox fx:id="subGenreCombo" prefWidth="180"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Type:"/>
            <ComboBox fx:id="typeCombo" prefWidth="180">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Paperback"/>
                        <String fx:value="Kindle"/>
                        <String fx:value="Audiobook"/>
                        <String fx:value="Hardcover"/>
                    </FXCollections>
                </items>
            </ComboBox>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Price:"/>
            <TextField fx:id="priceField" prefWidth="100"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Rating:"/>
            <TextField fx:id="ratingField" prefWidth="100"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Num Rated:"/>
            <TextField fx:id="numRatedField" prefWidth="100"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Amazon URL:"/>
            <TextField fx:id="urlFieldBook" prefWidth="300"/>
        </HBox>
    </VBox>

    <Separator prefWidth="420"/>

    <!-- ────────────── ACTION BUTTONS ────────────── -->
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="saveBtn" text="Save"
                style="-fx-background-color:#27ae60; -fx-text-fill:white;"
                prefWidth="100"/>
        <Button fx:id="cancelBtn" text="Cancel"
                style="-fx-background-color:#c0392b; -fx-text-fill:white;"
                prefWidth="100"/>
    </HBox>

</VBox>
